html
    head
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="/styles/custom.css")
    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            a.navbar-brand(href='/')
                img(src="/images/logo.jpg", alt="logo", width="64px")
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    li.nav-item.active
                        a.nav-link(href='/') Home 
                        span.sr-only (current)
                    li.nav-item
                        a.nav-link(href='/user') Users
                form.form-inline.my-2.my-lg-0(action="/user/search" method="GET")
                    input.form-control.mr-sm-2(type='search', placeholder='Search', aria-label='Search' name="q")
                    button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
        .container.pt-5
            block content