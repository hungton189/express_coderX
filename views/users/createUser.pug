extends ../layouts/comon

block content
    h1 Create new user
    if errors
        each error in errors
            .alert.alert-danger=error
    form(action="/user/create" method="POST")
        .form-group
            label(for="name") Name:
            input#name.form-control(type="text" name="name" value=values ? values.name:"")
        .form-group
            label(for="name") Phone:
            input#name.form-control(type="text" name="phone" value=values ? values.phone:"")
        input.btn.btn-primary(type="Submit" value="Create")