extends ../layouts/comon

block content
    .d-flex.align-items-center
        a.btn.btn-primary(href="/user/create") Thêm mới
        form.ml-auto(action="/user/search" method="GET")
            input(type="text" name="q" value=query)
            input.ml-4.btn-info(type="Submit" value="Tìm kiếm")

    table.table.align-center
        tr
            th Name
            th Phone
            th Actions
        each user in users
            tr
                td=user.name
                td=user.phone
                td
                    a.btn.btn-light(href="/user/"+user.id) view